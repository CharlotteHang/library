<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXButton?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<fx:root fx:id="books" prefHeight="400.0" prefWidth="640.0" type="VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.ubc.cs.cpsc210.controller.AddBookPageController">
  <stylesheets>
    <URL value="@../../../../../BasicApplication_css/BasicApplication.css" />
  </stylesheets>
   <children>
      <JFXButton fx:id="back" onAction="#backPage" ripplerFill="#08bbf2" text="Back">
         <VBox.margin>
            <Insets left="30.0" top="20.0" />
         </VBox.margin>
      </JFXButton>
      <Label text="Please provide the information of this new book (ISBN number and Book title must be provided)">
         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <Label maxWidth="-Infinity" prefWidth="120.0" text="Author:">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Label>
      <JFXTextField fx:id="title" maxWidth="-Infinity" prefWidth="500.0">
         <VBox.margin>
            <Insets left="120.0" />
         </VBox.margin>
      </JFXTextField>
      <Label maxWidth="-Infinity" prefWidth="120.0" text="TItle:">
         <VBox.margin>
            <Insets top="-20.0" />
         </VBox.margin>
      </Label>
      <Label maxWidth="-Infinity" prefWidth="120.0" text="Genre:">
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </Label>
      <JFXTextField fx:id="genre" maxWidth="-Infinity" prefWidth="500.0">
         <VBox.margin>
            <Insets left="120.0" top="-30.0" />
         </VBox.margin>
      </JFXTextField>
      <JFXTextField fx:id="price" maxWidth="-Infinity" prefWidth="500.0">
         <VBox.margin>
            <Insets left="120.0" />
         </VBox.margin>
      </JFXTextField>
      <Label maxWidth="-Infinity" prefWidth="120.0" text="Price">
         <VBox.margin>
            <Insets top="-15.0" />
         </VBox.margin>
      </Label>
      <Label maxWidth="-Infinity" prefHeight="17.0" prefWidth="179.0" text="PublishDate:">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
      <JFXTextField fx:id="publishdate" maxWidth="-Infinity" prefWidth="500.0">
         <VBox.margin>
            <Insets left="120.0" top="-25.0" />
         </VBox.margin>
      </JFXTextField>
      <Label maxWidth="-Infinity" prefWidth="120.0" text="Description:">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </Label>
      <Label maxWidth="-Infinity" prefHeight="17.0" prefWidth="179.0">
         <VBox.margin>
            <Insets top="-40.0" />
         </VBox.margin>
      </Label>
      <JFXTextArea fx:id="description" maxHeight="40.0" maxWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="500.0">
         <VBox.margin>
            <Insets left="120.0" />
         </VBox.margin>
      </JFXTextArea>
      <JFXButton fx:id="addBook" onAction="#addBook" text="Add this book">
         <VBox.margin>
            <Insets left="500.0" top="35.0" />
         </VBox.margin>
      </JFXButton>
      <Label maxWidth="-Infinity" prefWidth="120.0" text="ISBN number:">
         <VBox.margin>
            <Insets top="-280.0" />
         </VBox.margin>
      </Label>
      <JFXTextField fx:id="isbn" maxWidth="500.0">
         <VBox.margin>
            <Insets left="120.0" top="-20.0" />
         </VBox.margin>
      </JFXTextField>
      <JFXTextField fx:id="author" maxWidth="500.0">
         <VBox.margin>
            <Insets left="120.0" />
         </VBox.margin>
      </JFXTextField>
   </children>
</fx:root>
